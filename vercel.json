{
  "version": 2,
  "buildCommand": "pip install -r requirements.txt",
  "env": {
    "PYTHON_VERSION": "3.11"
  },
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.11"
    },
    "app.py": {
      "runtime": "python3.11"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "public": true,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/app.py"
    },
    {
      "source": "/:path*.html",
      "destination": "/$1"
    },
    {
      "source": "/(?!_next|_static|api).*",
      "destination": "/index.html"
    }
  ]
}
